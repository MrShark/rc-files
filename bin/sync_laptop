#!/usr/bin/env python3

"""
  Skeleton Python script

  Purpose:
  ...
"""

import os
import sys
import argparse


scriptname = os.path.basename(sys.argv[0])
__version__ = "0.0.1"


def main(args):
    """
    Main processing
    """
    os.chdir("/home/jens")
    if args.sync_here:
        os.system("rsync picard.persson.cx:/home/jens/Dokument/ Dokument -rv")
    else:
        os.system("rsync Dokument/ picard.persson.cx:/home/jens/Dokument -rv")

    return 0


if __name__ == '__main__' or __name__ == sys.argv[0]:
    parser = argparse.ArgumentParser(description='Skeleton file')
    parser.add_argument('--debug', dest='debug_level',
                        type=int, default=0,
                        help='Debug level, higher is more info')
    parser.add_argument('--here', dest='sync_here',
                        default=True, action='store_const',
                        const=True, help='Sync to this host')
    parser.add_argument('--there', dest='sync_here',
                        default=True, action='store_const',
                        const=False, help='Sync from this host')

    args = parser.parse_args()

    try:
        sys.exit(main(args))
    except KeyboardInterrupt:
        print("[{}]  Interrupted!".format(scriptname))
    parser.add_argument('--debug', dest='debug_level',
                        type=int, default=0,
                        help='Debug level, higher is more info')

    args = parser.parse_args()

    try:
        sys.exit(main(args))
    except KeyboardInterrupt:
        print("[{}]  Interrupted!".format(scriptname))
    parser.add_argument('--debug', dest='debug_level',
                        type=int, default=0,
                        help='Debug level, higher is more info')

    args = parser.parse_args()

    try:
        sys.exit(main(args))
    except KeyboardInterrupt:
        print("[{}]  Interrupted!".format(scriptname))
